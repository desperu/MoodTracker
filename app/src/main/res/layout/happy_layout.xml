<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.desperu.moodtracker.VerticalViewPager
        android:id="@+id/happy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffb8e986"
        android:foreground="@drawable/smiley_happy"
        android:foregroundGravity="center" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/happy"
        android:layout_alignBottom="@id/happy"
        android:clickable="true"
        app:backgroundTint="#ffb8e986"
        app:srcCompat="@drawable/ic_note_add_black" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/happy"
        android:layout_alignBottom="@id/happy"
        android:clickable="true"
        app:backgroundTint="#ffb8e986"
        app:srcCompat="@drawable/ic_history_black" />

</RelativeLayout>